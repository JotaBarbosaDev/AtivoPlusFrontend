@page
<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Página Complexa com Animações</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- DaisyUI -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.51.5/dist/full.css" rel="stylesheet" type="text/css" />
    <!-- AOS - Animate On Scroll -->
    <link href="https://unpkg.com/aos@next/dist/aos.css" rel="stylesheet">
    <style>
        /* Animação personalizada: fadeInUp */
        @@keyframes fadeInUp
        {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in-up {
            animation: fadeInUp 1s ease-out forwards;
        }
    </style>
</head>

<body class="bg-base-200">
    <!-- Navbar -->
    <nav class="navbar bg-base-100 shadow-lg" data-aos="fade-down">
        <div class="flex-1">
            <a class="btn btn-ghost normal-case text-xl">MeuSite</a>
        </div>
        <div class="flex-none">
            <ul class="menu menu-horizontal p-0">
                <li><a href="#inicio">Início</a></li>
                <li><a href="#portfolio">Portfolio</a></li>
                <li><a href="#contacto">Contacto</a></li>
            </ul>
        </div>
    </nav>

    <!-- Secção Hero com animações AOS -->
    <section id="inicio" class="hero min-h-screen bg-base-200" data-aos="fade-up">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold animate-pulse" data-aos="zoom-in">Bem-vindo ao MeuSite!</h1>
                <p class="py-6" data-aos="fade-right">Descobre soluções criativas com um design moderno e interativo.
                </p>
                <button class="btn btn-primary"
                    onclick="document.getElementById('modalInfo').classList.toggle('hidden')" data-aos="flip-up">Saber
                    Mais</button>
            </div>
        </div>
    </section>

    <!-- Secção Portfolio com cards animados -->
    <section id="portfolio" class="py-10">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-8" data-aos="fade-up">Portfolio</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="card bg-base-100 shadow-xl hover:scale-105 transition-transform duration-300"
                    data-aos="fade-up">
                    <figure><img src="https://via.placeholder.com/400x300" alt="Projeto 1" /></figure>
                    <div class="card-body">
                        <h2 class="card-title">Projeto 1</h2>
                        <p>Descrição breve do projeto. Design e inovação em destaque.</p>
                        <div class="card-actions justify-end">
                            <button class="btn btn-secondary">Ver mais</button>
                        </div>
                    </div>
                </div>
                <div class="card bg-base-100 shadow-xl hover:scale-105 transition-transform duration-300"
                    data-aos="fade-up" data-aos-delay="100">
                    <figure><img src="https://via.placeholder.com/400x300" alt="Projeto 2" /></figure>
                    <div class="card-body">
                        <h2 class="card-title">Projeto 2</h2>
                        <p>Detalhes que ressaltam a funcionalidade e estética do projeto.</p>
                        <div class="card-actions justify-end">
                            <button class="btn btn-secondary">Ver mais</button>
                        </div>
                    </div>
                </div>
                <div class="card bg-base-100 shadow-xl hover:scale-105 transition-transform duration-300"
                    data-aos="fade-up" data-aos-delay="200">
                    <figure><img src="https://via.placeholder.com/400x300" alt="Projeto 3" /></figure>
                    <div class="card-body">
                        <h2 class="card-title">Projeto 3</h2>
                        <p>Exemplo de soluções personalizadas para diferentes necessidades.</p>
                        <div class="card-actions justify-end">
                            <button class="btn btn-secondary">Ver mais</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Modal de Informação -->
    <div id="modalInfo" class="modal modal-bottom sm:modal-middle hidden">
        <div class="modal-box" data-aos="zoom-in">
            <h3 class="font-bold text-lg">Mais Informações</h3>
            <p class="py-4">Aqui podes colocar mais detalhes sobre os teus serviços, projetos ou qualquer outra
                informação relevante para os visitantes.</p>
            <div class="modal-action">
                <button class="btn"
                    onclick="document.getElementById('modalInfo').classList.add('hidden')">Fechar</button>
            </div>
        </div>
    </div>

    <!-- Secção Contacto -->
    <section id="contacto" class="py-10 bg-base-100" data-aos="fade-up">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-8">Contacto</h2>
            <div class="flex flex-col items-center">
                <form class="w-full max-w-lg">
                    <div class="form-control mb-4">
                        <label class="label">
                            <span class="label-text">Nome</span>
                        </label>
                        <input type="text" placeholder="O teu nome" class="input input-bordered" />
                    </div>
                    <div class="form-control mb-4">
                        <label class="label">
                            <span class="label-text">Email</span>
                        </label>
                        <input type="email" placeholder="O teu email" class="input input-bordered" />
                    </div>
                    <div class="form-control mb-4">
                        <label class="label">
                            <span class="label-text">Mensagem</span>
                        </label>
                        <textarea class="textarea textarea-bordered" placeholder="A tua mensagem"></textarea>
                    </div>
                    <div class="form-control">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer p-10 bg-base-100 text-base-content" data-aos="fade-up">
        <div>
            <span class="footer-title">Serviços</span>
            <a class="link link-hover">Design</a>
            <a class="link link-hover">Desenvolvimento</a>
            <a class="link link-hover">Marketing</a>
        </div>
        <div>
            <span class="footer-title">Empresa</span>
            <a class="link link-hover">Sobre nós</a>
            <a class="link link-hover">Carreiras</a>
        </div>
        <div>
            <span class="footer-title">Legal</span>
            <a class="link link-hover">Privacidade</a>
            <a class="link link-hover">Termos de Uso</a>
        </div>
    </footer>

    <!-- Scripts adicionais -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000, // duração da animação em milissegundos
            once: false,      // animação apenas uma vez
        });

        // Fechar o modal ao clicar fora dele
        window.onclick = function (event) {
            const modal = document.getElementById('modalInfo');
            if (event.target === modal) {
                modal.classList.add('hidden');
            }
        }
    </script>
</body>

</html>
