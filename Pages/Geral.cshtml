@section Scripts {
    <!-- Include calculation and dashboard scripts -->
    <script src="~/js/ativosCalculos.js"></script>
    <script src="~/js/geral.js"></script>

    <script>
        // Enhanced CSS for dark glass effect
        document.addEventListener('DOMContentLoaded', function () {
            const style = document.createElement('style');
            style.textContent = `
                                        .dark-glass-card {
                                            background: rgba(3, 7, 18, 0.4);
                                            backdrop-filter: blur(25px);
                                            border: 1px solid rgba(255, 255, 255, 0.03);
                                            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.8);
                                        }
                
                                        .dark-glass-card:hover {
                                            background: rgba(3, 7, 18, 0.6);
                                            border: 1px solid rgba(255, 255, 255, 0.08);
                                            box-shadow: 0 35px 70px -12px rgba(0, 0, 0, 0.9);
                                            transform: translateY(-8px);
                                        }

                                        .glass-card {
                                            background: rgba(3, 7, 18, 0.25);
                                            backdrop-filter: blur(20px);
                                            border: 1px solid rgba(255, 255, 255, 0.02);
                                            box-shadow: 0 20px 40px -12px rgba(0, 0, 0, 0.7);
                                        }
                
                                        .glass-card:hover {
                                            background: rgba(3, 7, 18, 0.4);
                                            border: 1px solid rgba(255, 255, 255, 0.06);
                                            transform: translateY(-4px);
                                            box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.8);
                                        }
                
                                        /* Loading animations */
                                        .loading-indicator {
                                            opacity: 0.7;
                                            animation: pulse 2s infinite;
                                        }
                
                                        @@keyframes pulse {
                                            0%, 100% { opacity: 0.7; }
                                            50% { opacity: 1; }
                                        }
                
                                        /* Gradient text animation */
                                        .bg-gradient-to-r {
                                            background-size: 200% 200%;
                                            animation: gradient 3s ease infinite;
                                        }
                
                                        @@keyframes gradient {
                                            0% { background-position: 0% 50%; }
                                            50% { background-position: 100% 50%; }
                                            100% { background-position: 0% 50%; }
                                        }

                                        /* Floating particles effect */
                                        @@keyframes float {
                                            0%, 100% { transform: translateY(0px); }
                                            50% { transform: translateY(-20px); }
                                        }

                                        .floating-particle {
                                            animation: float 6s ease-in-out infinite;
                                        }
                
                                        /* Auto-refresh indicator */
                                        .refresh-indicator {
                                            position: fixed;
                                            top: 120px;
                                            right: 20px;
                                            background: linear-gradient(135deg, #10b981, #059669);
                                            color: white;
                                            padding: 12px 20px;
                                            border-radius: 25px;
                                            font-size: 14px;
                                            font-weight: 600;
                                            z-index: 1000;
                                            transform: translateX(120%);
                                            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
                                            box-shadow: 0 10px 25px rgba(16, 185, 129, 0.3);
                                        }
                
                                        .refresh-indicator.show {
                                            transform: translateX(0);
                                        }

                                        /* Enhanced glowing effects */
                                        .glow-emerald {
                                            box-shadow: 0 0 20px rgba(16, 185, 129, 0.3);
                                        }

                                        .glow-blue {
                                            box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
                                        }

                                        .glow-blue2 {
                                            box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
                                        }

                                        .glow-orange {
                                            box-shadow: 0 0 20px rgba(249, 115, 22, 0.3);
                                        }

                                        /* Neon card effects */
                                        .neon-emerald {
                                            box-shadow: 
                                                0 0 5px rgba(16, 185, 129, 0.4),
                                                0 0 25px rgba(16, 185, 129, 0.2),
                                                0 0 50px rgba(16, 185, 129, 0.1);
                                        }

                                        .neon-blue {
                                            box-shadow: 
                                                0 0 5px rgba(59, 130, 246, 0.4),
                                                0 0 25px rgba(59, 130, 246, 0.2),
                                                0 0 50px rgba(59, 130, 246, 0.1);
                                        }

                                        .neon-indigo {
                                            box-shadow: 
                                                0 0 5px rgba(99, 102, 241, 0.4),
                                                0 0 25px rgba(99, 102, 241, 0.2),
                                                0 0 50px rgba(99, 102, 241, 0.1);
                                        }

                                        .neon-orange {
                                            box-shadow: 
                                                0 0 5px rgba(249, 115, 22, 0.4),
                                                0 0 25px rgba(249, 115, 22, 0.2),
                                                0 0 50px rgba(249, 115, 22, 0.1);
                                        }

                                        /* Enhanced dark glass cards with neon effects */
                                        .dark-glass-card:hover .neon-emerald,
                                        .dark-glass-card:hover .neon-blue,
                                        .dark-glass-card:hover .neon-indigo,
                                        .dark-glass-card:hover .neon-orange {
                                            box-shadow: 
                                                0 0 10px rgba(var(--glow-color), 0.6),
                                                0 0 40px rgba(var(--glow-color), 0.4),
                                                0 0 80px rgba(var(--glow-color), 0.2);
                                        }
                                    `;
            document.head.appendChild(style);

            // Initialize dashboard with debugging
            console.log('üöÄ Initializing dashboard...');

            // Force initialization after a small delay to ensure all scripts are loaded
            setTimeout(() => {
                if (window.DashboardManager && typeof window.DashboardManager.initDashboard === 'function') {
                    console.log('‚úÖ DashboardManager found, initializing...');
                    window.DashboardManager.initDashboard();
                } else {
                    console.error('‚ùå DashboardManager not found. Available:', Object.keys(window));
                    // Try direct initialization
                    if (typeof initDashboard === 'function') {
                        console.log('üîÑ Trying direct initDashboard...');
                        initDashboard();
                    }
                }
            }, 500);

            // Show auto-refresh indicator
            const showRefreshIndicator = () => {
                let indicator = document.querySelector('.refresh-indicator');
                if (!indicator) {
                    indicator = document.createElement('div');
                    indicator.className = 'refresh-indicator';
                    indicator.innerHTML = '‚ú® Dados atualizados com sucesso!';
                    document.body.appendChild(indicator);
                }

                indicator.classList.add('show');
                setTimeout(() => {
                    indicator.classList.remove('show');
                }, 3000);
            };

            // Override refresh function if available
            if (window.DashboardManager && window.DashboardManager.refreshDashboard) {
                const originalRefresh = window.DashboardManager.refreshDashboard;
                window.DashboardManager.refreshDashboard = async function () {
                    console.log('üîÑ Refreshing dashboard...');
                    await originalRefresh();
                    showRefreshIndicator();
                };
            }

            // Add debug info
            console.log('üîç Available functions:', {
                calcularLucroDeposito: typeof calcularLucroDeposito,
                calcularLucroFundoInvestimento: typeof calcularLucroFundoInvestimento,
                calcularLucroImovel: typeof calcularLucroImovel,
                initDashboard: typeof initDashboard,
                DashboardManager: typeof window.DashboardManager
            });
        });

        // Enhanced error handling with user feedback
        window.addEventListener('error', function (event) {
            console.error('üö® Global error:', event.error);

            // Show user-friendly error notification
            const errorToast = document.createElement('div');
            errorToast.className = 'fixed top-4 left-4 z-50 bg-red-500 text-white px-6 py-4 rounded-lg shadow-lg';
            errorToast.innerHTML = '‚ö†Ô∏è Erro ao carregar dados. Tentando novamente...';
            document.body.appendChild(errorToast);

            setTimeout(() => {
                document.body.removeChild(errorToast);
            }, 5000);
        });

        // Add page visibility handling for performance
        document.addEventListener('visibilitychange', function () {
            if (document.visibilityState === 'visible') {
                console.log('üëÅÔ∏è Page visible, refreshing data...');
                if (window.DashboardManager && window.DashboardManager.refreshDashboard) {
                    setTimeout(() => {
                        window.DashboardManager.refreshDashboard();
                    }, 1000);
                }
            }
        });
    </script>
}
