@page
@model AtivoPlusFrontend.Pages.Pages_ImovelArrendado
@{
  ViewData["Title"] = "Imóveis Arrendados";
  Layout = "_Layout";
}

<div class="min-h-screen bg-gray-950 pt-20 pb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Header Section -->
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-4xl font-bold bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent mb-2">
          Imóveis Arrendados
        </h1>
        <p class="text-gray-400">Gerencie sua carteira de propriedades e rendimentos de arrendamento</p>
      </div>
      <button id="novoImovelBtn"
        class="bg-gradient-to-r from-primary-600 to-blue-600 text-white px-6 py-3 rounded-xl hover:from-primary-700 hover:to-blue-700 focus:ring-4 focus:ring-primary-500/25 transition-all duration-200 transform hover:scale-105 active:scale-95 flex items-center gap-2 font-semibold">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Adicionar Imóvel
      </button>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-gray-900/50 backdrop-blur-xl border border-gray-800 rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="text-lg font-semibold text-white">Valor Total</h3>
            <p class="text-gray-400 text-sm">Propriedades</p>
          </div>
          <div class="w-12 h-12 bg-primary-500/10 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <span id="valorTotal" class="text-2xl font-bold text-white">€0,00</span>
        </div>
      </div>

      <div class="bg-gray-900/50 backdrop-blur-xl border border-gray-800 rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="text-lg font-semibold text-white">Renda Mensal</h3>
            <p class="text-gray-400 text-sm">Arrendamento</p>
          </div>
          <div class="w-12 h-12 bg-green-500/10 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <span id="rendaMensal" class="text-2xl font-bold text-green-400">€0,00</span>
        </div>
      </div>

      <div class="bg-gray-900/50 backdrop-blur-xl border border-gray-800 rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="text-lg font-semibold text-white">Renda Anual</h3>
            <p class="text-gray-400 text-sm">Estimada</p>
          </div>
          <div class="w-12 h-12 bg-blue-500/10 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <span id="rendaAnual" class="text-2xl font-bold text-blue-400">€0,00</span>
        </div>
      </div>

      <div class="bg-gray-900/50 backdrop-blur-xl border border-gray-800 rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="text-lg font-semibold text-white">Propriedades</h3>
            <p class="text-gray-400 text-sm">Total</p>
          </div>
          <div class="w-12 h-12 bg-purple-500/10 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <span id="imoveisAtivos" class="text-2xl font-bold text-purple-400">0</span>
        </div>
      </div>
    </div>

    <!-- Estado de carregamento -->
    <div id="loadingState" class="py-20 items-center justify-center text-gray-400 hidden">
      <div class="animate-spin rounded-full h-16 w-16 border-b-2 border-primary-500 mb-4"></div>
      <p class="text-lg">Carregando imóveis...</p>
    </div>

    <!-- Estado de erro -->
    <div id="errorState" class="py-20 items-center justify-center text-gray-400 hidden">
      <div class="bg-red-500/10 p-5 rounded-full mb-5">
        <svg class="w-14 h-14 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <p id="errorStateMessage" class="text-lg mb-4 text-center max-w-md">Erro ao carregar imóveis</p>
      <div class="flex gap-3">
        <button id="retryButton"
          class="bg-gray-700 hover:bg-gray-600 text-white px-5 py-2 rounded-lg transition-colors">
          Tentar novamente
        </button>
        <button id="errorStateNovoImovel"
          class="bg-gradient-to-r from-primary-600 to-blue-600 text-white px-5 py-2 rounded-xl hover:from-primary-700 hover:to-blue-700 focus:ring-4 focus:ring-primary-500/25 transition-all duration-200 transform hover:scale-105 active:scale-95 flex items-center gap-2 font-semibold hidden">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Cria o teu primeiro imóvel
        </button>
      </div>
    </div>

    <!-- Estado vazio -->
    <div id="emptyState" class="py-20 items-center justify-center text-gray-400 hidden">
      <div class="bg-gray-800/50 p-5 rounded-full mb-5">
        <svg class="w-16 h-16 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
      </div>
      <h3 class="text-xl font-bold text-white mb-2">Nenhum imóvel encontrado</h3>
      <p class="text-gray-400 mb-2 max-w-md text-center">Você ainda não possui imóveis arrendados cadastrados na sua
        carteira.</p>
      <p class="text-gray-500 mb-6 max-w-md text-center">Comece adicionando seu primeiro imóvel para acompanhar
        rendimentos e valorização.</p>
      <button id="emptyStateNovoImovel"
        class="bg-gradient-to-r from-primary-600 to-blue-600 text-white px-6 py-3 rounded-xl hover:from-primary-700 hover:to-blue-700 focus:ring-4 focus:ring-primary-500/25 transition-all duration-200 transform hover:scale-105 active:scale-95 flex items-center gap-2 font-semibold">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Cria o teu primeiro imóvel
      </button>
    </div>

    <!-- Container de Imóveis -->
    <div id="imoveisContainer">
      <!-- Properties Grid -->
      <div id="imoveisGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Os cartões de imóveis serão inseridos aqui dinamicamente pelo JavaScript -->
      </div>
    </div>
  </div>

  <!-- Modal Adicionar Imóvel -->
  <div id="novoImovelModal" class="fixed inset-0 bg-black/60 backdrop-blur-sm items-center justify-center z-50 hidden">
    <div class="bg-gray-900/95 backdrop-blur-xl border border-gray-800 rounded-2xl shadow-2xl w-full max-w-md mx-4">
      <div class="p-6">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-white">Adicionar Imóvel</h2>
          <button onclick="fecharModalNovoImovel()" class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <form id="formNovoImovel" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Ativo Financeiro</label>
            <select id="ativoFinanceiroSelect" name="ativoFinaceiroId" required
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
              <option value="">Selecione um ativo financeiro</option>
              <!-- As opções serão preenchidas dinamicamente -->
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Designação</label>
            <input type="text" id="designacao" name="designacao" placeholder="Nome do imóvel" required
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Morada</label>
            <input type="text" id="morada" name="morada" placeholder="Rua, Cidade, Código Postal" required
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Localização</label>
            <input type="text" id="localizacao" name="localizacao" placeholder="Cidade, Distrito" required
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Valor do Imóvel (€)</label>
            <input type="number" id="valorImovel" name="valorImovel" placeholder="200000" required
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Renda Mensal (€)</label>
            <input type="number" id="valorRenda" name="valorRenda" placeholder="1200" required
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Valor Mensal Condomínio (€)</label>
            <input type="number" id="valorMensalCondominio" name="valorMensalCondominio" placeholder="100"
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Despesas Anuais Estimadas (€)</label>
            <input type="number" id="valorAnualDespesasEstimadas" name="valorAnualDespesasEstimadas" placeholder="500"
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div class="flex gap-3 pt-4">
            <button type="button" onclick="fecharModalNovoImovel()"
              class="flex-1 py-3 bg-gray-800 text-gray-300 rounded-xl hover:bg-gray-700 transition-colors duration-200">
              Cancelar
            </button>
            <button type="submit"
              class="flex-1 py-3 bg-gradient-to-r from-primary-600 to-blue-600 text-white rounded-xl hover:from-primary-700 hover:to-blue-700 transition-all duration-200">
              Adicionar Imóvel
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal Editar Imóvel -->
  <div id="editarImovelModal"
    class="fixed inset-0 bg-black/60 backdrop-blur-sm items-center justify-center z-50 hidden">
    <div class="bg-gray-900/95 backdrop-blur-xl border border-gray-800 rounded-2xl shadow-2xl w-full max-w-md mx-4">
      <div class="p-6">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-white">Editar Imóvel</h2>
          <button onclick="fecharModalEditarImovel()" class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <form id="formEditarImovel" class="space-y-4">
          <input type="hidden" id="editImovelId" name="id">

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Ativo Financeiro</label>
            <select id="editAtivoFinanceiroSelect" name="ativoFinaceiroId" required
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
              <option value="">Selecione um ativo financeiro</option>
              <!-- As opções serão preenchidas dinamicamente -->
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Designação</label>
            <input type="text" id="editDesignacao" name="designacao" placeholder="Nome do imóvel" required
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Morada</label>
            <input type="text" id="editMorada" name="morada" placeholder="Rua, Cidade, Código Postal" required
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Localização</label>
            <input type="text" id="editLocalizacao" name="localizacao" placeholder="Cidade, Distrito" required
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Valor do Imóvel (€)</label>
            <input type="number" id="editValorImovel" name="valorImovel" placeholder="200000" required
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Renda Mensal (€)</label>
            <input type="number" id="editValorRenda" name="valorRenda" placeholder="1200" required
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Valor Mensal Condomínio (€)</label>
            <input type="number" id="editValorMensalCondominio" name="valorMensalCondominio" placeholder="100"
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Despesas Anuais Estimadas (€)</label>
            <input type="number" id="editValorAnualDespesasEstimadas" name="valorAnualDespesasEstimadas"
              placeholder="500"
              class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
          </div>

          <div class="flex gap-3 pt-4">
            <button type="button" onclick="fecharModalEditarImovel()"
              class="flex-1 py-3 bg-gray-800 text-gray-300 rounded-xl hover:bg-gray-700 transition-colors duration-200">
              Cancelar
            </button>
            <button type="submit"
              class="flex-1 py-3 bg-gradient-to-r from-primary-600 to-blue-600 text-white rounded-xl hover:from-primary-700 hover:to-blue-700 transition-all duration-200">
              Guardar Alterações
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal Confirmação Delete -->
  <div id="deleteConfirmationModal"
    class="fixed inset-0 bg-black/60 backdrop-blur-sm items-center justify-center z-50 hidden">
    <div class="bg-gray-900/95 backdrop-blur-xl border border-gray-800 rounded-2xl shadow-2xl w-full max-w-md mx-4">
      <div class="p-6">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-red-500/10 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            </div>
            <h2 class="text-xl font-bold text-white">Eliminar Imóvel</h2>
          </div>
          <button onclick="fecharModalConfirmacaoDelete()" class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="mb-6">
          <p class="text-gray-300 mb-4">
            Tem a certeza de que pretende eliminar este imóvel? Esta ação não pode ser revertida.
          </p>
          <div class="bg-gray-800/50 rounded-xl p-4 border border-gray-700">
            <div id="deleteImovelInfo" class="text-white">
              <!-- Property info will be populated by JavaScript -->
            </div>
          </div>
        </div>

        <div class="flex justify-end gap-3">
          <button onclick="fecharModalConfirmacaoDelete()"
            class="bg-gray-700 text-white px-6 py-3 rounded-xl hover:bg-gray-600 transition-all duration-200 font-medium">
            Cancelar
          </button>
          <button id="confirmDeleteBtn" onclick="eliminarImovel()"
            class="bg-red-600 text-white px-6 py-3 rounded-xl hover:bg-red-700 focus:ring-4 focus:ring-red-500/25 transition-all duration-200 font-medium">
            Eliminar
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Detalhes do Imóvel -->
  <div id="detalhesImovelModal"
    class="fixed inset-0 bg-black/60 backdrop-blur-sm items-center justify-center z-50 hidden">
    <div
      class="bg-gray-900/95 backdrop-blur-xl border border-gray-800 rounded-2xl shadow-2xl w-full max-w-2xl mx-4 max-h-[90vh] overflow-y-auto">
      <div class="p-6">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-primary-500/10 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-white">Detalhes do Imóvel</h2>
          </div>
          <button onclick="fecharModalDetalhes()" class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="space-y-6">
          <!-- Informações Básicas -->
          <div class="bg-gray-800/50 rounded-xl p-6 border border-gray-700">
