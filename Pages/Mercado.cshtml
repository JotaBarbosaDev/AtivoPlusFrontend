@page
@model AtivoPlus.Pages.MercadoModel
@{
    ViewData["Title"] = "Mercado";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Página Complexa com Animações</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
</head>

<main class="h-auto pt-20">
  <h1 class="text-3xl font-bold text-primary-700 mb-6">Mercado</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
    <div class="card bg-base-100 shadow-xl border border-primary-200 hover:shadow-2xl transition-all">
      <div class="card-body">
        <h2 class="card-title text-primary-600">Apple Inc. (AAPL)</h2>
        <p class="text-gray-500">Tecnologia • Nasdaq</p>
        <div class="text-2xl font-bold mt-2 text-green-500">+2.34%</div>
        <p class="text-sm text-gray-400">Última atualização: há 3 min</p>
      </div>
    </div>

    <div class="card bg-base-100 shadow-xl border border-primary-200 hover:shadow-2xl transition-all">
      <div class="card-body">
        <h2 class="card-title text-primary-600">Tesla (TSLA)</h2>
        <p class="text-gray-500">Automóvel • Nasdaq</p>
        <div class="text-2xl font-bold mt-2 text-red-500">-1.12%</div>
        <p class="text-sm text-gray-400">Última atualização: há 10 min</p>
      </div>
    </div>

    <div class="card bg-base-100 shadow-xl border border-primary-200 hover:shadow-2xl transition-all">
      <div class="card-body">
        <h2 class="card-title text-primary-600">Microsoft (MSFT)</h2>
        <p class="text-gray-500">Tecnologia • Nasdaq</p>
        <div class="text-2xl font-bold mt-2 text-green-500">+0.78%</div>
        <p class="text-sm text-gray-400">Última atualização: há 5 min</p>
      </div>
    </div>
  </div>

  <div class="mt-10">
    <h2 class="text-2xl font-semibold text-primary-700 mb-4">Explorar mais ativos</h2>
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full border border-primary-200">
        <thead class="bg-primary-100 text-primary-700">
          <tr>
            <th>Nome</th>
            <th>Setor</th>
            <th>Preço</th>
            <th>Variação</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>NVIDIA (NVDA)</td>
            <td>Hardware</td>
            <td>$812.34</td>
            <td class="text-green-500 font-semibold">+4.12%</td>
          </tr>
          <tr>
            <td>Amazon (AMZN)</td>
            <td>E-Commerce</td>
            <td>$150.76</td>
            <td class="text-red-500 font-semibold">-0.87%</td>
          </tr>
          <tr>
            <td>Meta (META)</td>
            <td>Redes Sociais</td>
            <td>$305.44</td>
            <td class="text-green-500 font-semibold">+1.06%</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</main>

