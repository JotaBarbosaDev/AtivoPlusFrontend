                                <input type="text" id="perfilNumeroPorta" name="numeroPorta"
                                    class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
                            </div>

                            <div>
                                <label for="perfilLocalidade" class="block text-sm font-medium text-gray-300 mb-2">Localidade</label>
                                <input type="text" id="perfilLocalidade" name="localidade"
                                    class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
                            </div>

                            <div>
                                <label for="perfilConcelho" class="block text-sm font-medium text-gray-300 mb-2">Concelho</label>
                                <input type="text" id="perfilConcelho" name="concelho"
                                    class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
                            </div>

                            <div>
                                <label for="perfilDistrito" class="block text-sm font-medium text-gray-300 mb-2">Distrito</label>
                                <input type="text" id="perfilDistrito" name="distrito"
                                    class="w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/25 transition-colors">
