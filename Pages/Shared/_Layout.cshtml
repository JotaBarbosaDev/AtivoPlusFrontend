    <!-- Scripts -->
    <!-- Authentication Script - Must load first -->
    <script src="~/js/auth.js"></script>

    <script>
        // Smooth scrolling
        document.documentElement.style.scrollBehavior = 'smooth';

        // Mobile menu toggle
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('hidden');
        }

        // Profile Modal Functions
        function abrirPerfilModal() {
            const modal = document.getElementById('perfilModal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            carregarDadosUsuario();
        }

        function fecharPerfilModal() {
            const modal = document.getElementById('perfilModal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
        }

        // Load user data into profile modal
        async function carregarDadosUsuario() {
            try {
                const response = await fetch('/api/userinfo/getInfo?id=-1', {
                    method: 'GET',
                    credentials: 'include',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    const data = await response.json();
                    const userData = data.userInfoRequest;
                    const moradaData = data.moradaRequest;
                    
                    // Update profile modal fields - Informa√ß√µes Pessoais
                    document.getElementById('perfilNome').value = userData.nome || '';
                    document.getElementById('perfilEmail').value = userData.email || '';
                    document.getElementById('perfilTelefone').value = userData.telefone || '';
                    document.getElementById('perfilNif').value = userData.nif || '';
                    document.getElementById('perfilIban').value = userData.iban || '';
                    
                    // Update profile modal fields - Morada
                    document.getElementById('perfilRua').value = moradaData.rua || '';
                    document.getElementById('perfilPiso').value = moradaData.piso || '';
                    document.getElementById('perfilNumeroPorta').value = moradaData.numeroPorta || '';
                    document.getElementById('perfilLocalidade').value = moradaData.localidade || '';
                    document.getElementById('perfilConcelho').value = moradaData.concelho || '';
                    document.getElementById('perfilDistrito').value = moradaData.distrito || '';
                    document.getElementById('perfilCodPostal').value = moradaData.codPostal || '';
                    
                    // Update avatar
                    const avatarUrl = `https://ui-avatars.com/api/?name=${encodeURIComponent(userData.nome || 'User')}&background=0ea5e9&color=fff`;
                    document.getElementById('perfilAvatar').src = avatarUrl;
                    
                    // Update dropdown display
                    document.getElementById('userDisplayName').textContent = userData.nome || 'Utilizador';
                    document.getElementById('dropdownUserName').textContent = userData.nome || 'Utilizador';
                    document.getElementById('dropdownUserEmail').textContent = userData.email || 'utilizador@email.com';
                    
                    // Update navigation avatar
                    const navAvatars = document.querySelectorAll('img[alt="Avatar"]');
                    navAvatars.forEach(avatar => {
                        avatar.src = avatarUrl;
                    });
                } else {
                    console.error('Erro ao carregar dados do usu√°rio:', response.status);
                }
            } catch (error) {
                console.error('Erro ao carregar dados do usu√°rio:', error);
            }
        }

        // Handle profile form submission
        document.getElementById('perfilForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const requestData = {
                userInfoRequest: {
                    id: -1,
                    nome: document.getElementById('perfilNome').value,
                    email: document.getElementById('perfilEmail').value,
                    telefone: document.getElementById('perfilTelefone').value,
                    morada_id: 0,
                    nif: document.getElementById('perfilNif').value,
                    dateTime: new Date().toISOString(),
                    iban: document.getElementById('perfilIban').value
                },
                moradaRequest: {
                    rua: document.getElementById('perfilRua').value,
                    piso: document.getElementById('perfilPiso').value,
                    numeroPorta: document.getElementById('perfilNumeroPorta').value,
                    concelho: document.getElementById('perfilConcelho').value,
                    distrito: document.getElementById('perfilDistrito').value,
                    localidade: document.getElementById('perfilLocalidade').value,
                    codPostal: document.getElementById('perfilCodPostal').value
                }
            };

            try {
                const response = await fetch('/api/userinfo/setInfo', {
                    method: 'PUT',
                    credentials: 'include',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(requestData)
                });

                if (response.ok) {
                    showToast('Perfil atualizado com sucesso!', 'success');
                    fecharPerfilModal();
                    // Reload user data to update UI
                    carregarDadosUsuario();
                } else {
                    showToast('Erro ao atualizar perfil', 'error');
                }
            } catch (error) {
                console.error('Erro ao atualizar perfil:', error);
                showToast('Erro ao atualizar perfil', 'error');
            }
        });

        // Logout function
        async function logout() {
            try {
                const response = await fetch('/api/auth/logout', {
                    method: 'POST',
                    credentials: 'include',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                // Clear auth cookies regardless of response
                clearAuthCookies();
                
                // Redirect to login page
                window.location.href = '/';
            } catch (error) {
                console.error('Erro durante logout:', error);
                // Still redirect even if logout fails
                clearAuthCookies();
                window.location.href = '/';
            }
        }

        // Toast notification function
        function showToast(message, type = 'info') {
            // Create toast element
            const toast = document.createElement('div');
            toast.className = `fixed top-4 right-4 px-6 py-4 rounded-xl shadow-lg transform transition-transform duration-300 z-50 ${
                type === 'success' ? 'bg-green-600' : 
                type === 'error' ? 'bg-red-600' : 'bg-blue-600'
            } text-white`;
            
            toast.innerHTML = `
                <div class="flex items-center gap-3">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        ${type === 'success' ? 
                            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>' :
                            type === 'error' ?
                            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>' :
                            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>'
                        }
                    </svg>
                    <span>${message}</span>
                </div>
            `;
            
            document.body.appendChild(toast);
            
            // Show toast
            setTimeout(() => {
                toast.style.transform = 'translateX(0)';
            }, 100);
            
            // Hide toast after 3 seconds
            setTimeout(() => {
                toast.style.transform = 'translateX(100%)';
                setTimeout(() => {
                    document.body.removeChild(toast);
                }, 300);
            }, 3000);
        }

        // Load user data on page load
        document.addEventListener('DOMContentLoaded', function () {
            // Load user info for navigation display
            carregarDadosUsuario();
            
            // Animate cards on load
            const cards = document.querySelectorAll('.card-hover');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

