<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e',
                        },
                        secondary: {
                            50: '#f8fafc',
                            100: '#f1f5f9',
                            200: '#e2e8f0',
                            300: '#cbd5e1',
                            400: '#94a3b8',
                            500: '#64748b',
                            600: '#475569',
                            700: '#334155',
                            800: '#1e293b',
                            900: '#0f172a',
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'sans-serif'],
                    },
                    transitionProperty: {
                        'height': 'height',
                        'spacing': 'margin, padding',
                    },
                    boxShadow: {
                        'card': '0 2px 10px rgba(0, 0, 0, 0.08)',
                        'nav': '0 2px 10px rgba(0, 0, 0, 0.05)',
                        'elevated': '0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.05)',
                        'subtle': '0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)',
                    }
                },
            },
            plugins: [],
        };
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome para ícones mais modernos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
        }
        
        .sidebar {
            transition: width 0.3s ease;
        }
        
        .main-content {
            transition: margin-left 0.3s ease;
        }
        
        /* Estilos globais de UI clean */
        .card {
            @apply bg-white rounded-lg shadow-subtle border border-gray-100;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .card:hover {
            @apply shadow-card;
            transform: translateY(-2px);
        }
        
        /* Estilos dos botões primários */
        .btn-primary {
            @apply px-4 py-2 bg-primary-600 text-white rounded-md shadow-sm hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-all duration-200;
        }
        
        /* Estilos dos botões secundários */
        .btn-secondary {
            @apply px-4 py-2 bg-white text-gray-700 border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-all duration-200;
        }
        
        /* Badge para status */
        .badge {
            @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium;
        }
        
        /* Cores de badges específicas para desempenho */
        .badge-success {
            @apply bg-green-100 text-green-800;
        }
        
        .badge-warning {
            @apply bg-yellow-100 text-yellow-800;
        }
        
        .badge-danger {
            @apply bg-red-100 text-red-800;
        }
        
        /* Estilos para tabelas modernos */
        .table-modern {
            @apply min-w-full divide-y divide-gray-200;
        }
        
        .table-modern thead {
            @apply bg-gray-50;
        }
        
        .table-modern th {
            @apply px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider;
        }
        
        .table-modern td {
            @apply px-6 py-4 whitespace-nowrap text-sm text-gray-500;
        }
        
        .table-modern tbody tr {
            @apply bg-white;
            transition: background-color 0.2s ease;
        }
        
        .table-modern tbody tr:hover {
            @apply bg-gray-50;
        }
        
        /* Estilo para scrollbars personalizado */
        ::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }
        
        ::-webkit-scrollbar-track {
            background: #f1f5f9;
        }
        
        ::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 3px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body class="min-h-screen bg-gray-50">
    <!-- Navbar superior -->
    <nav class="fixed top-0 z-50 w-full bg-white border-b border-gray-200 shadow-nav">
        <div class="px-3 py-3 lg:px-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <!-- Logo da empresa -->
                    <a href="/" class="flex items-center">
                        <span class="self-center text-xl font-semibold whitespace-nowrap text-primary-700 flex items-center">
                            <i class="fas fa-chart-line mr-2"></i>
                            AtivosPlus
                        </span>
                    </a>
                </div>
                
                <!-- Menu de navegação central -->
                <div class="hidden lg:flex lg:space-x-1">
                    <a href="/Geral" class="py-2 px-3 text-sm font-medium rounded-md @(Context.Request.Path.Value.Contains("/Geral") ? "bg-primary-50 text-primary-700" : "text-gray-700 hover:bg-gray-100 hover:text-primary-700")">
                        <i class="fas fa-home mr-1.5"></i>Geral
                    </a>
                    <a href="/Ativos" class="py-2 px-3 text-sm font-medium rounded-md @(Context.Request.Path.Value.Contains("/Ativos") ? "bg-primary-50 text-primary-700" : "text-gray-700 hover:bg-gray-100 hover:text-primary-700")">
                        <i class="fas fa-landmark mr-1.5"></i>Ativos
                    </a>
                    <a href="/Carteira" class="py-2 px-3 text-sm font-medium rounded-md @(Context.Request.Path.Value.Contains("/Carteira") ? "bg-primary-50 text-primary-700" : "text-gray-700 hover:bg-gray-100 hover:text-primary-700")">
                        <i class="fas fa-wallet mr-1.5"></i>Carteiras
                    </a>
                    <a href="/Mercado" class="py-2 px-3 text-sm font-medium rounded-md @(Context.Request.Path.Value.Contains("/Mercado") ? "bg-primary-50 text-primary-700" : "text-gray-700 hover:bg-gray-100 hover:text-primary-700")">
                        <i class="fas fa-chart-bar mr-1.5"></i>Mercado
                    </a>
                </div>
                
                <!-- Menu de usuário e notificações -->
                <div class="flex items-center space-x-3">
                    <!-- Botão de busca -->
                    <button type="button" class="p-2 text-gray-500 rounded-lg hover:bg-gray-100">
                        <i class="fas fa-search"></i>
                    </button>
                    
                    <!-- Botão de notificações -->
                    <div class="relative">
                        <button type="button" class="p-2 text-gray-500 rounded-lg hover:bg-gray-100 relative">
                            <i class="fas fa-bell"></i>
                            <span class="absolute top-1 right-1 inline-flex items-center justify-center w-2 h-2 bg-red-500 rounded-full"></span>
                        </button>
                    </div>
                    
                    <!-- Dropdown do usuário -->
                    <div class="relative">
                        <button type="button" class="flex text-sm rounded-full focus:ring-4 focus:ring-gray-300" aria-expanded="false">
                            <img class="w-8 h-8 rounded-full" src="https://ui-avatars.com/api/?name=John+Doe&background=0284c7&color=fff" alt="avatar do usuário">
                        </button>
                    </div>
                    
                    <!-- Menu mobile toggle -->
                    <button type="button" class="p-2 text-gray-500 rounded-lg lg:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="mobile-menu" aria-expanded="false">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Menu Mobile (escondido por padrão) -->
        <div class="hidden lg:hidden" id="mobile-menu">
            <ul class="py-2 space-y-1 px-3 border-t border-gray-200">
                <li>
                    <a href="/Geral" class="block py-2 px-3 text-base font-medium rounded-md @(Context.Request.Path.Value.Contains("/Geral") ? "bg-primary-50 text-primary-700" : "text-gray-700 hover:bg-gray-100 hover:text-primary-700")">
                        <i class="fas fa-home mr-2"></i>Geral
                    </a>
                </li>
                <li>
                    <a href="/Ativos" class="block py-2 px-3 text-base font-medium rounded-md @(Context.Request.Path.Value.Contains("/Ativos") ? "bg-primary-50 text-primary-700" : "text-gray-700 hover:bg-gray-100 hover:text-primary-700")">
                        <i class="fas fa-landmark mr-2"></i>Ativos
                    </a>
                </li>
                <li>
                    <a href="/Carteira" class="block py-2 px-3 text-base font-medium rounded-md @(Context.Request.Path.Value.Contains("/Carteira") ? "bg-primary-50 text-primary-700" : "text-gray-700 hover:bg-gray-100 hover:text-primary-700")">
                        <i class="fas fa-wallet mr-2"></i>Carteiras
                    </a>
                </li>
                <li>
                    <a href="/Mercado" class="block py-2 px-3 text-base font-medium rounded-md @(Context.Request.Path.Value.Contains("/Mercado") ? "bg-primary-50 text-primary-700" : "text-gray-700 hover:bg-gray-100 hover:text-primary-700")">
                        <i class="fas fa-chart-bar mr-2"></i>Mercado
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Conteúdo principal -->
    <div class="pt-16 lg:pt-16 pb-10 min-h-screen">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="p-4 bg-white border-t border-gray-200 shadow-inner">
        <div class="mx-auto max-w-screen-xl">
            <div class="sm:flex sm:items-center sm:justify-between">
                <div class="flex items-center mb-4 sm:mb-0">
                    <span class="text-sm text-gray-500">© 2025 AtivosPlus. Todos os direitos reservados.</span>
                </div>
                <ul class="flex flex-wrap items-center text-sm text-gray-500">
                    <li><a href="#" class="hover:underline mr-6">Sobre</a></li>
                    <li><a href="#" class="hover:underline mr-6">Política de Privacidade</a></li>
                    <li><a href="#" class="hover:underline">Contato</a></li>
                </ul>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
    <script>
        // Toggle do menu mobile
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuButton = document.querySelector('[aria-controls="mobile-menu"]');
            const mobileMenu = document.getElementById('mobile-menu');
            
            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', function() {
                    const expanded = this.getAttribute('aria-expanded') === 'true';
                    this.setAttribute('aria-expanded', !expanded);
                    mobileMenu.classList.toggle('hidden');
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
