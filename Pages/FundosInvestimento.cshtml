@page
@model AtivoPlusFrontend.Pages.Pages_FundosInvestimento
@{
  ViewData["Title"] = "Fundos de Investimento";
  Layout = "_Layout";
}

<div class="min-h-screen bg-gray-950 pt-20 pb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Header Section -->
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-4xl font-bold bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent mb-2">
          Fundos de Investimento
        </h1>
        <p class="text-gray-400">Gerencie seus investimentos em fundos e criptomoedas</p>
      </div>
      <button id="novoFundoBtn"
        class="bg-gradient-to-r from-primary-600 to-blue-600 text-white px-6 py-3 rounded-xl hover:from-primary-700 hover:to-blue-700 focus:ring-4 focus:ring-primary-500/25 transition-all duration-200 transform hover:scale-105 active:scale-95 flex items-center gap-2 font-semibold shadow-lg">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Adicionar Fundo
      </button>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-gray-900/50 backdrop-blur-xl border border-gray-800 rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="text-lg font-semibold text-white">Total Investido</h3>
            <p class="text-gray-400 text-sm">Em fundos</p>
          </div>
          <div class="w-12 h-12 bg-primary-500/10 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <span id="totalInvestido" class="text-2xl font-bold text-white">€-----</span>
        </div>
      </div>

      <div class="bg-gray-900/50 backdrop-blur-xl border border-gray-800 rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="text-lg font-semibold text-white">Valor Atual</h3>
            <p class="text-gray-400 text-sm">Market value</p>
          </div>
          <div class="w-12 h-12 bg-green-500/10 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <span id="valorAtual" class="text-2xl font-bold text-green-400">€-----</span>
        </div>
      </div>

      <div class="bg-gray-900/50 backdrop-blur-xl border border-gray-800 rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="text-lg font-semibold text-white">Retorno</h3>
            <p class="text-gray-400 text-sm">Ganho/Perda</p>
          </div>
          <div class="w-12 h-12 bg-yellow-500/10 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12" />
            </svg>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <span id="retorno" class="text-2xl font-bold text-yellow-400">€-----</span>
        </div>
      </div>

      <div class="bg-gray-900/50 backdrop-blur-xl border border-gray-800 rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="text-lg font-semibold text-white">Total Fundos</h3>
            <p class="text-gray-400 text-sm">Quantidade</p>
          </div>
          <div class="w-12 h-12 bg-blue-500/10 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <span id="totalFundos" class="text-2xl font-bold text-white">0</span>
          <span class="text-blue-400 text-sm">fundos</span>
        </div>
      </div>
    </div>

    <!-- Fundos Container with States -->
    <div id="fundosContainer">
      <!-- Loading State -->
      <div id="loadingState" class="flex flex-col items-center justify-center py-16">
        <div class="w-16 h-16 border-4 border-primary-500 border-t-transparent rounded-full animate-spin mb-4">
        </div>
        <p class="text-gray-400">A carregar seus fundos de investimento...</p>
      </div>

      <!-- Error State -->
      <div id="errorState" class="flex flex-col items-center justify-center py-16 hidden">
        <div class="w-16 h-16 bg-red-500/10 rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <p class="text-red-400 font-semibold mb-2">Erro ao carregar fundos</p>
        <p class="text-gray-400 text-center max-w-md">Não foi possível carregar seus fundos de investimento neste
          momento.
          Por favor, tente novamente mais tarde.</p>
        <button id="retryButton"
          class="mt-4 bg-gray-800 hover:bg-gray-700 text-white px-4 py-2 rounded-xl transition-colors">
          Tentar novamente
        </button>
      </div>

      <!-- Fundos Grid - Will be populated by JavaScript -->
      <div id="fundosGrid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6"></div>
    </div>

    <!-- Empty State -->
    <div id="emptyState" class="text-center py-16 hidden">
      <div class="w-24 h-24 bg-gray-800 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-12 h-12 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-400 mb-2">Nenhum fundo encontrado</h3>
      <p class="text-gray-500 mb-6">Adicione seu primeiro fundo de investimento</p>
      <button id="emptyStateNovoFundo"
        class="bg-gradient-to-r from-primary-600 to-blue-600 text-white px-6 py-3 rounded-xl hover:from-primary-700 hover:to-blue-700 transition-all duration-200">
        Adicionar Primeiro Fundo
      </button>
    </div>
  </div>

  <!-- Modal Adicionar Fundo -->
  <div id="novoFundoModal" class="fixed inset-0 bg-black/60 backdrop-blur-sm items-center justify-center z-50 hidden">
    <div
      class="bg-gray-900/95 backdrop-blur-xl border border-gray-800 rounded-2xl p-8 shadow-2xl w-full max-w-md mx-4 transform transition-all duration-300">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-white">Adicionar Fundo</h2>
        <button id="fecharModalBtn" class="text-gray-400 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <form id="formNovoFundo" class="space-y-6">
        <div class="relative">
          <label for="ativoSigla" class="block text-sm font-medium text-gray-300 mb-2">
            Sigla do Ativo
          </label>
          <div class="relative">
            <input type="text" id="ativoSigla" required
              class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-200"
              placeholder="Pesquisar símbolo... (ex: AAPL, BTC)" autocomplete="off">
            <div id="searchSpinner" class="absolute right-3 top-1/2 transform -translate-y-1/2 hidden">
              <div class="w-4 h-4 border-2 border-primary-500 border-t-transparent rounded-full animate-spin"></div>
            </div>
          </div>

          <!-- Search Results Dropdown -->
          <div id="symbolSearchResults"
            class="absolute z-50 w-full mt-1 bg-gray-800 border border-gray-700 rounded-xl shadow-lg hidden max-h-60 overflow-y-auto">
            <!-- Results will be populated here -->
          </div>
        </div>

        <div>
          <label for="nomeFundo" class="block text-sm font-medium text-gray-300 mb-2">
            Nome do Fundo
          </label>
          <input type="text" id="nomeFundo" required
            class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-200"
            placeholder="Ex: Bitcoin, S&P 500">
        </div>

        <div>
          <label for="ativoFinanceiroSelect" class="block text-sm font-medium text-gray-300 mb-2">
            Ativo Financeiro
          </label>
          <select id="ativoFinanceiroSelect" required
            class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-200">
            <option value="">Selecione um ativo financeiro</option>
          </select>
        </div>

        <div>
          <label for="montanteInvestido" class="block text-sm font-medium text-gray-300 mb-2">
            Montante Investido (€)
          </label>
          <input type="number" id="montanteInvestido" required step="0.01"
            class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white placeholder-gray-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-200"
            placeholder="0.00">
        </div>

        <div class="flex gap-3 pt-4">
          <button type="button" id="cancelarBtn"
            class="flex-1 py-3 bg-gray-800 text-gray-300 rounded-xl hover:bg-gray-700 transition-colors duration-200">
            Cancelar
          </button>
          <button type="submit"
            class="flex-1 py-3 bg-gradient-to-r from-primary-600 to-blue-600 text-white rounded-xl hover:from-primary-700 hover:to-blue-700 transition-all duration-200">
            Adicionar Fundo
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal Detalhes do Fundo -->
  <div id="detalhesFundoModal"
    class="fixed inset-0 bg-black/60 backdrop-blur-sm items-center justify-center z-50 hidden">
    <div
      class="bg-gray-900/95 backdrop-blur-xl border border-gray-800 rounded-2xl p-8 shadow-2xl w-full max-w-md mx-4 transform transition-all duration-300">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-white">Detalhes do Fundo</h2>
        <button id="fecharModalDetalhesBtn" class="text-gray-400 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="space-y-4">
        <!-- Header with gradient background -->
        <div id="modalFundoHeader" class="bg-gradient-to-r from-blue-600 to-purple-600 p-6 rounded-xl text-center mb-6">
          <h3 id="detalhesFundoNome" class="text-xl font-bold text-white mb-1">Nome do Fundo</h3>
          <p id="detalhesFundoSigla" class="text-white/80">SIGLA</p>
        </div>

        <!-- Dados do Fundo -->
        <div class="space-y-6">
          <div>
            <h4 class="text-white font-semibold mb-3">Informações Financeiras</h4>
            <div class="bg-gray-800/50 rounded-xl p-4 space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-400">Montante Investido:</span>
                <span id="detalhesMontanteInvestido" class="text-white font-semibold">€0,00</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-400">Valor Atual:</span>
                <span id="detalhesValorAtual" class="text-white font-semibold">€0,00</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-400">Lucro:</span>
                <span id="detalhesLucro" class="text-green-400 font-semibold">+€0,00</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-400">Retorno (%):</span>
                <span id="detalhesRetornoPorcentagem" class="text-green-400 font-semibold">+0%</span>
              </div>
            </div>
          </div>

          <div>
            <h4 class="text-white font-semibold mb-3">Detalhes Adicionais</h4>
            <div class="bg-gray-800/50 rounded-xl p-4 space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-400">Data de Início:</span>
                <span id="detalhesDataInicio" class="text-white font-semibold">00/00/0000</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-400">Duração (meses):</span>
                <span id="detalhesDuracaoMeses" class="text-white font-semibold">0</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-400">Taxa de Imposto:</span>
                <span id="detalhesTaxaImposto" class="text-white font-semibold">0%</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Botão de Fechar -->
        <div class="mt-6 pt-4 border-t border-gray-800">
          <button id="fecharDetalhesFundoBtn"
            class="w-full py-3 bg-gray-800 text-gray-300 rounded-xl hover:bg-gray-700 transition-colors duration-200">
            Fechar
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Confirmar Remoção -->
  <div id="confirmarRemocaoModal"
    class="fixed inset-0 bg-black/60 backdrop-blur-sm items-center justify-center z-50 hidden">
    <div class="bg-gray-900/95 backdrop-blur-xl border border-gray-800 rounded-2xl max-w-md w-full mx-4 p-6">
      <div class="text-center">
        <!-- Ícone de Aviso -->
        <div class="w-16 h-16 bg-red-500/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
        </div>

        <!-- Título -->
        <h3 class="text-xl font-bold text-white mb-2">Confirmar Remoção</h3>

        <!-- Mensagem -->
        <p class="text-gray-300 mb-2">Tem certeza que deseja remover este fundo de investimento?</p>
        <p id="fundoParaRemoverNome" class="text-primary-400 font-semibold mb-6"></p>

        <!-- Botões -->
        <div class="flex gap-3">
          <button id="cancelarRemocaoBtn"
            class="flex-1 py-3 bg-gray-800 text-gray-300 rounded-xl hover:bg-gray-700 transition-colors duration-200">
            Cancelar
          </button>
          <button id="confirmarRemocaoBtn"
            class="flex-1 py-3 bg-red-600 text-white rounded-xl hover:bg-red-700 transition-colors duration-200">
            Remover
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Gráfico de Candles -->
  <div id="candlestickModal" class="fixed inset-0 bg-black/60 backdrop-blur-sm items-center justify-center z-50 hidden">
    <div
      class="bg-gray-900/95 backdrop-blur-xl border border-gray-800 rounded-2xl p-6 shadow-2xl w-full max-w-5xl mx-4 h-4/5 transform transition-all duration-300">
      <div class="flex justify-between items-center mb-6">
        <div>
          <h2 id="chartTitle" class="text-2xl font-bold text-white">Gráfico de Candles</h2>
          <p id="chartSubtitle" class="text-gray-400">Visualize os dados históricos do ativo</p>
        </div>
        <button id="fecharCandlestickModal" class="text-gray-400 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Chart Container -->
      <div class="h-full bg-gray-800/50 rounded-xl relative">
        <div id="chartLoadingState" class="absolute inset-0 flex items-center justify-center">
          <div class="text-center">
            <div class="w-16 h-16 border-4 border-primary-500 border-t-transparent rounded-full animate-spin mb-4">
            </div>
            <p class="text-gray-400">Carregando dados do gráfico...</p>
          </div>
        </div>
        <div id="chartErrorState" class="absolute inset-0 items-center justify-center hidden">
          <div class="text-center">
            <div class="w-16 h-16 bg-red-500/10 rounded-full flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
            </div>
            <p class="text-red-400 font-semibold mb-2">Erro ao carregar gráfico</p>
            <p class="text-gray-400 text-center max-w-md">Não foi possível carregar os dados do gráfico para este
              símbolo.</p>
          </div>
        </div>
        <div id="candlestickChart" class="w-full h-full hidden"></div>
      </div>
    </div>
  </div>

  <!-- Toast Notifications -->
  <div id="toast-container" class="fixed bottom-4 right-4 z-50 space-y-2"></div>
</div>

<!-- Include necessary JavaScript files -->
<script src="/js/ativosCalculos.js"></script>
<script src="/js/fundosInvestimento.js"></script>

<script>
  // Toast notification function
  function showToast(message, type = "info") {
    const toast = document.createElement("div");
    let iconSVG, bgClass;

    switch (type) {
      case "success":
        bgClass = "bg-green-500/10 border-green-500/20";
        iconSVG = `<svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414L8.414 15l-4.121-4.121a1 1 0 111.414-1.414L8.414 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
    </svg>`;
        break;
      case "error":
        bgClass = "bg-red-500/10 border-red-500/20";
        iconSVG = `<svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
    </svg>`;
        break;
      default:
        bgClass = "bg-primary-500/10 border-primary-500/20";
        iconSVG = `<svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m-1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>`;
    }

    toast.className = `flex items-center p-4 space-x-3 ${bgClass} border backdrop-blur-xl rounded-xl shadow-lg text-white animate-slide-up`;
    toast.innerHTML = `${iconSVG}<div class="text-sm font-medium">${message}</div>`;

    document.getElementById("toast-container").appendChild(toast);

    setTimeout(() => {
      toast.classList.add("opacity-0", "transition-opacity", "duration-300");
      setTimeout(() => toast.remove(), 300);
    }, 3000);
  }

  // Note: Form submission is handled in fundosInvestimento.js
</script>
